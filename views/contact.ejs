<%include partials/header.ejs%>
  <div class="container">
    <h1 class="brand"><span>Contact</span> Poster</h1>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
          <h3>Poster Info</h3>
        <ul>
          <li><i class="fa fa-road"></i> ######</li>
          <li><i class="fa fa-phone"></i> ######</li>
          <li><i class="fa fa-envelope"></i> <%= email %></li>
        </ul>
      </div>
      <div class="contact">
        <form method="POST" action="send">
            <div class="container">
                <div class="columns">
                    <div class="column col-xl-12">
                        <p>
                            <label>Name</label>
                            <input type="text" name="name" class="form-input">
                        </p>
                        <p>
                            <label>Email Address</label>
                            <input type="email" name="email" class="form-input">
                        </p>
                        <p>
                            <label>Phone Number</label>
                            <input type="text" name="phone" class="form-input">
                        </p>
                        <p class="full">
                            <label>Message</label>
                            <textarea name="message" rows="5" class="form-input"></textarea>
                        </p>
                        <p>
                            <input type="text" value="<%= email %>" style="display: none;" name="posterEmail"/>
                        </p>
                        <p class="full">
                            <button type="submit">Submit</button>
                        </p>
                    </div>
                </div>
            </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>

<%include partials/footer.ejs%>