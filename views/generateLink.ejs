<% include partials/header %>

    <div class="row flex-center">
        <div class="sm-4 col">

            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <form method="POST" action="send?surveyID=<%= surveyID %>">
                        <div id="survey">
                            <div class="form-group">
                                <label for="title">Send a link to answer the Survey</label>
                            </div>

                            <div class="form-group">
                                <label for="email">Recipients Email</label>
                                <input type="text" id="email" name="email" class="form-input" >
                            </div>

                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea type="text-area" id="message" name="message" class="form-input"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn-secondary btn-block">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <% include partials/footer %>