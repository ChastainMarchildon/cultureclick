<% include partials/header %>

    <div class="row flex-center">
        <div class="sm-4 col">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <form method="POST">
                        <div id="survey">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" id="title" name="title" class="form-input" value="<%= survey.title %>">
                            </div>

                            <% for (let i = 0; i < questions.length; i++) { %>
                                <div class="form-group">
                                    <label for="question">Question <%= question._id %></label>
                                    <input type="text-area" id="question" name="question" class="form-input">
                                </div>
                              <% } %>

                            <div class="form-group">
                                <label for="question">Question</label>
                                <input type="text-area" id="question" name="question" class="form-input">
                            </div>

                            <div class="form-group", style="display: none" >
                                <label for="surveyID">ID</label>
                                <input type="text" id="surveyID" name="ID" class="form-input" value="<%= survey.id %>">
                            </div>
                        </div>
                        
                        <button type="button"  class="btn-secondary btn-block" id="btnAddQuestion">Add Question</button>
                        <button type="submit" class="btn-secondary btn-block">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include partials/footer %>