<% include partials/header %>
<div class="container">
  <div class="hero hero-sm">
    <div class="col-10 col">
      <h1>
        <%= title %>
      </h1>
    </div>
  </div>

  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>City</th>
        <th>Description</th>
        <th>ImageUrl</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

      <% for (let i = 0; i < surveys.length; i++) { %>

        <tr>
          <td>
            <%= surveys[i].title %>
          </td>
          <td>
            <%= surveys[i].city %>
          </td>
          <td>
            <%= surveys[i].description %>
          </td>
          <td>
            <%= surveys[i].question %>
          </td>
          <td>
            <a href="/admin/edit/<%= surveys[i]._id %>" class="btn btn-default">Edit</a>
          </td>
          <td>
            <a href="/admin/delete/<%= surveys[i]._id %>" class="btn btn-default" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
          </td>
        </tr>

        <% } %>
    </tbody>
  </table>
  <div class="column">
      <p>
        <a href="/add" class="btn btn-primary" id="addListing">Add Survey</a>
      </p>
    </div>
</div>
  <% include partials/footer %>